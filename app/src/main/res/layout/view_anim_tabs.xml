<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    tools:background="@color/yellow"
    tools:layout_gravity="bottom">

    <ImageView
        android:id="@+id/center_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="96dp"
        android:src="@drawable/large_hollow_circle" />

    <ImageView
        android:id="@+id/left_chat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_chat_bubble_24dp"
        android:layout_marginLeft="24dp" />

    <ImageView
        android:id="@+id/right_story"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_group_work_24dp"
        android:layout_marginRight="24dp" />

    <ImageView
        android:id="@+id/bottom_saved"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="48dp"
        android:src="@drawable/small_hollow_circle" />

    <View
        android:id="@+id/indicator"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="44dp"
        android:background="@drawable/indicator_background"/>

</FrameLayout>