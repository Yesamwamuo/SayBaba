<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    tools:layout_gravity="bottom"
    tools:background="@color/white_t75">
    <View
        android:id="@+id/vst_border"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top|center"
        android:background="@color/light_grey"
        />
    <ImageView
        android:id="@+id/vst_start_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="69dp"
        android:layout_gravity="start|bottom"
        android:src="@drawable/ic_chat_bubble_24dp"
        android:layout_marginLeft="69dp" />
    <TextView
        android:id="@+id/vst_start_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="52dp"
        android:layout_gravity="start|bottom"
        android:text="Templates"
        android:textSize="12sp"
        android:layout_marginLeft="52dp" />
    <ImageView
        android:id="@+id/vst_end_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="69dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_chat_bubble_24dp"
        android:layout_marginRight="69dp" />
    <TextView
        android:id="@+id/vst_end_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="64dp"
        android:layout_gravity="end|bottom"
        android:text="Profile"
        android:textSize="12sp"
        android:layout_marginRight="64dp" />
    <ImageView
        android:id="@+id/vst_bottom_image"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:src="@drawable/ic_chat_bubble_24dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="26dp"
        />

    <TextView
        android:id="@+id/vst_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center|bottom"
        android:text="Camera"
        android:textSize="12sp"
        />
</FrameLayout>